class Instrumento:
    def __init__(self, nombre):
        self.nombre = nombre
    def sonido(self):
        print(self.nombre, "suena bien")
class Guitarra(Instrumento):
    def tocar(self):
        print("Suena guitarra ♫")
class Piano(Instrumento):
    def tocar(self):
        print("Suena piano ♫")
if __name__ == "__main__":
    guitarra = Guitarra("Guitarra")
    piano = Piano("Piano")
    guitarra.sonido()
    guitarra.tocar()
    piano.sonido()
    piano.tocar()
